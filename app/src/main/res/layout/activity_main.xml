<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edge Assist"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2E3440" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Floating controls for volume and speed dial"
                android:textSize="16sp"
                android:textColor="#5E81AC"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="14sp"
                        android:textColor="#5E81AC" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Inactive"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2E3440" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/serviceToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="#A3BE8C"
                    app:trackTint="#ECEFF4" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Permission Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/permissionBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Grant Required Permissions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#EBCB8B"
            android:textColor="#2E3440"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button" />

        <!-- Speed Dial Setup -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Speed Dial Contact"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3440"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add contacts for long press speed dial"
                    android:textSize="14sp"
                    android:textColor="#5E81AC"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/contactNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Contact name"
                    android:inputType="textPersonName"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/phoneNumberEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Phone number"
                    android:inputType="phone"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/selectContactBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Select Contact"
                        android:backgroundTint="#88C0D0"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/saveContactBtn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Save"
                        android:backgroundTint="#A3BE8C"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="8dp"
                        app:cornerRadius="8dp"
                        style="@style/Widget.Material3.Button" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manageContactsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Manage Saved Contacts"
                    android:backgroundTint="#D08770"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="8dp"
                    style="@style/Widget.Material3.Button" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Saved Contacts Display -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/savedContactsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saved Contacts"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3440"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/contactsListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Instructions -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How to Use"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2E3440"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:background="#A3BE8C"
                        android:layout_gravity="top" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Single Tap: Volume Down"
                        android:textSize="14sp"
                        android:textColor="#2E3440" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:background="#5E81AC"
                        android:layout_gravity="top" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Double Tap: Volume Up"
                        android:textSize="14sp"
                        android:textColor="#2E3440" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:background="#BF616A"
                        android:layout_gravity="top" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Long Press: Open Speed Dial"
                        android:textSize="14sp"
                        android:textColor="#2E3440" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:background="#EBCB8B"
                        android:layout_gravity="top" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Auto-hide with breathing animation when unused"
                        android:textSize="14sp"
                        android:textColor="#2E3440" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>