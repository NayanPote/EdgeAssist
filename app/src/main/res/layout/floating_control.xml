<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Outer glow effect -->
    <View
        android:id="@+id/glowView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:background="@drawable/glow_circle"
        android:alpha="0.4" />

    <!-- Main floating button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/floatingCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#5E81AC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Background gradient -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/floating_button_gradient"
                android:alpha="0.3"/>

            <!-- Main icon -->
            <ImageView
                android:id="@+id/mainIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_edge_assist"
                app:tint="#FFFFFF"
                android:alpha="0.9" />

            <!-- Ring indicator for breathing -->
            <View
                android:id="@+id/breathingRing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/breathing_ring"
                android:alpha="0" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Edge indicator line -->
    <View
        android:id="@+id/edgeIndicator"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="2dp"
        android:background="@drawable/edge_indicator_gradient"
        android:alpha="0.8" />

</FrameLayout>